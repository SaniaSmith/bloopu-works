<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestTimeOffActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/red_bg">

        <ImageButton
            android:id="@+id/btn_backArrow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_transparent"
            app:srcCompat="@drawable/ic_back_arrow"
            app:tint="#FFFFFF" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/btn_backArrow5"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Request Time Off"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutClickable_timeOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/thin_radius"
        android:clickable="true">

        <ImageView
            android:id="@+id/img_work"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_round_work"/>

        <TextView
            android:id="@+id/tv_typeTimeOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Time Off Type"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/tv_reasonTimeOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_typeTimeOff"
            android:layout_marginStart="11dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/img_work"
            android:fontFamily="@font/montserrat_medium"
            android:text="Cuti Tahunan"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/tv_reasonTimeOff"
            android:src="@drawable/ic_dropdown" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutClickable_requestType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/thin_radius"
        android:clickable="true">

        <ImageView
            android:id="@+id/img_clock"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_bytesize_clock" />

        <TextView
            android:id="@+id/tv_typeRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/montserrat_light"
            android:text="Request Type"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_longTimeOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_typeRequest"
            android:layout_marginStart="11dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/img_clock"
            android:fontFamily="@font/montserrat_medium"
            android:text="Cuti Tahunan"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/tv_longTimeOff"
            android:src="@drawable/ic_dropdown" />

    </RelativeLayout>



</LinearLayout>